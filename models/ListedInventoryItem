const mongoose = require('mongoose')

const Schema = mongoose.Schema;

const InventorySchema = new Schema({
    item: { type: String, required: true },
    brand: String,
    vendor: String,
    catalog: String,
    currentquantity: Number,
    minimumquantity: Number,
    maximumquantity: Number,
    location: String,
    type: String,
    lastUsedDate: { type: Date, default: null },
    orderHistory: [{ type: Date }],
    lastCycleCount: { type: Date, default: null },
    cycleCountInterval: { type: Number, default: 90 },
    orderFrequencyPeriod: { type: Number, default: 30 }
});


module.exports = mongoose.model('ListedInventoryItem', InventorySchema);